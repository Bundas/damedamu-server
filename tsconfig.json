{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictNullChecks": false,
        "noEmit": false,
        "baseUrl": "./",
    },
    "include": ["src/**/*", "__tests__/**/*"]
}
